<h1>Item Search</h1>

<% if @search&.documents.present?  %>
  <ul>
    <% @search.documents.each do |item| %>
      <li class="item">
        <%= link_to item.name, item_path(item) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>
    No results found <%= "for '#{params[:query]}'" %>
    <%= "at #{@location.name}" if @location %>
  </p>
<% end %>
